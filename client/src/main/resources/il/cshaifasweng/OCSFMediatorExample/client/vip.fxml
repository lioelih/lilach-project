<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.VIPController"
            prefHeight="720.0" prefWidth="1280.0"
            stylesheets="@homepage.css">

    <top>
        <StackPane styleClass="top-bar" prefHeight="70">
            <children>
                <HBox spacing="15" alignment="CENTER_LEFT" styleClass="top-bar">
                    <padding><Insets left="80" right="20"/></padding>
                    <children>
                        <ImageView fx:id="logoImage" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Button fx:id="backButton" text="Back to Home" styleClass="nav-button"/>
                    </children>
                </HBox>
            </children>
        </StackPane>
    </top>

    <center>
        <StackPane fx:id="vipDecor">
            <children>

                <ImageView preserveRatio="true" opacity="0.08"
                           fitWidth="${vipDecor.width}"
                           StackPane.alignment="TOP_CENTER">
                    <image><Image url="@/image/top.png"/></image>
                </ImageView>

                <ImageView preserveRatio="true" opacity="0.08" scaleY="-1"
                           fitWidth="${vipDecor.width}"
                           StackPane.alignment="BOTTOM_CENTER">
                    <image><Image url="@/image/top.png"/></image>
                </ImageView>

                <VBox alignment="CENTER" spacing="16" maxWidth="460">

                    <HBox alignment="CENTER" spacing="10">
                        <ImageView fitHeight="32" fitWidth="32" preserveRatio="true">
                            <image><Image url="@/image/crown.png"/></image>
                        </ImageView>
                        <Label text="VIP Membership"
                               style="-fx-font-size: 26px; -fx-font-weight: 800;"/>
                    </HBox>
                    <VBox spacing="14" alignment="CENTER" maxWidth="420"
                          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 18;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 24, 0, 0, 8);">

                        <HBox alignment="CENTER">
                            <Label text="₪100 / month"
                                   style="-fx-background-color: linear-gradient(to right, #f5d66d, #d4af37);
                                      -fx-text-fill: #2a2a2a; -fx-padding: 6 14;
                                      -fx-background-radius: 999; -fx-font-weight: bold;"/>
                        </HBox>
                        <VBox spacing="12" alignment="CENTER" maxWidth="360">
                            <HBox spacing="10" alignment="CENTER">
                                <ImageView fitHeight="22" fitWidth="22" preserveRatio="true">
                                    <image><Image url="@/image/check.png"/></image>
                                </ImageView>
                                <Label text="10% off every purchase"/>
                            </HBox>

                            <HBox spacing="10" alignment="CENTER">
                                <ImageView fitHeight="22" fitWidth="22" preserveRatio="true">
                                    <image><Image url="@/image/branches.png"/></image>
                                </ImageView>
                                <Label text="Buy from any branch"/>
                            </HBox>

                            <HBox spacing="10" alignment="CENTER">
                                <ImageView fitHeight="22" fitWidth="22" preserveRatio="true">
                                    <image><Image url="@/image/calendar.png"/></image>
                                </ImageView>
                                <Label text="Cancel anytime — ends at next renewal"/>
                            </HBox>
                        </VBox>
                    </VBox>

                    <VBox alignment="CENTER" spacing="8">
                        <Button fx:id="subscribeButton" text="Subscribe Now"
                                style="-fx-padding: 12 28; -fx-font-size: 14px; -fx-background-radius: 12;
                                   -fx-background-color: linear-gradient(to right, #f5d66d, #d4af37);
                                   -fx-text-fill: #2a2a2a; -fx-font-weight: 700;"/>
                        <Button fx:id="cancelVipButton" text="Cancel VIP"
                                visible="false" managed="false"
                                style="-fx-padding: 10 18; -fx-background-radius: 12;
                                   -fx-background-color: #edf2f7; -fx-text-fill: #333;"/>
                    </VBox>

                </VBox>
            </children>
        </StackPane>
    </center>

</BorderPane>
