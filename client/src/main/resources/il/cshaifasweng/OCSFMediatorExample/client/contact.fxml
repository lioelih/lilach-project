<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ContactController"
            prefHeight="720.0" prefWidth="1280.0"
            stylesheets="@homepage.css">

    <top>
        <StackPane styleClass="top-bar" prefHeight="70">
            <children>
                <HBox spacing="15" alignment="CENTER_LEFT" styleClass="top-bar">
                    <padding><Insets top="0" right="20" bottom="0" left="80"/></padding>
                    <children>
                        <ImageView fx:id="logoImage" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Button fx:id="backButton" text="Back to Home" styleClass="nav-button" onAction="#goHome"/>
                        <Button fx:id="catalogButton" text="Back to Catalog" styleClass="nav-button" onAction="#goCatalog"/>
                    </children>
                </HBox>
            </children>
        </StackPane>
    </top>

    <center>
        <StackPane>
            <VBox alignment="CENTER" spacing="18" maxWidth="520">

                <HBox alignment="CENTER" spacing="10">
                    <ImageView fitHeight="32" fitWidth="32" preserveRatio="true">
                        <image><Image url="@/image/support.png"/></image>
                    </ImageView>
                    <Label text="Contact Support" style="-fx-font-size: 26px; -fx-font-weight: 800;"/>
                </HBox>

                <VBox spacing="16" alignment="CENTER" maxWidth="460"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 18;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 24, 0, 0, 8);">

                    <HBox spacing="12" alignment="CENTER_LEFT">
                        <ImageView fitHeight="22" fitWidth="22" preserveRatio="true">
                            <image><Image url="@/image/date.png"/></image>
                        </ImageView>
                        <VBox spacing="2">
                            <Label text="Support Hours" style="-fx-font-weight: bold;"/>
                            <Label text="Daily 08:00â€“20:00"/>
                        </VBox>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Label fx:id="statusLabel" text="OPEN NOW"
                               style="-fx-background-color: #e6ffed; -fx-text-fill: #137333;
                                      -fx-padding: 4 10; -fx-background-radius: 999; -fx-font-weight: bold;"/>
                    </HBox>

                    <HBox spacing="12" alignment="CENTER_LEFT">
                        <ImageView fitHeight="22" fitWidth="22" preserveRatio="true">
                            <image><Image url="@/image/phone.png"/></image>
                        </ImageView>
                        <VBox spacing="2">
                            <Label text="Phone" style="-fx-font-weight: bold;"/>
                            <Label text="+972 54-123-4567"/>
                        </VBox>
                    </HBox>

                    <HBox spacing="12" alignment="CENTER_LEFT">
                        <ImageView fitHeight="22" fitWidth="22" preserveRatio="true">
                            <image><Image url="@/image/email.png"/></image>
                        </ImageView>
                        <VBox spacing="2">
                            <Label text="Email" style="-fx-font-weight: bold;"/>
                            <Label text="lilachstoresupp@gmail.com"/>
                        </VBox>
                    </HBox>

                    <Label text="We reply within 1 business hour during support hours."
                           style="-fx-text-fill: #666; -fx-font-size: 11px;"/>
                </VBox>

                <HBox alignment="CENTER">
                    <Button fx:id="emailButton" text="Email Support"
                            style="-fx-padding: 10 20; -fx-background-radius: 12;"/>
                </HBox>

            </VBox>
        </StackPane>
    </center>
</BorderPane>
