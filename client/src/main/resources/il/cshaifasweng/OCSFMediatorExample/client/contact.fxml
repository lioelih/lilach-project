<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ContactController"
            prefHeight="720.0" prefWidth="1280.0"
            stylesheets="@homepage.css">

    <top>
        <StackPane styleClass="top-bar" prefHeight="70">
            <children>
                <HBox spacing="15" alignment="CENTER_LEFT" styleClass="top-bar">
                    <padding>
                        <Insets top="0" right="20" bottom="0" left="80"/>
                    </padding>
                    <children>
                        <ImageView fx:id="logoImage" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Button fx:id="backButton" text="Back to Home" styleClass="nav-button" onAction="#goHome"/>
                        <Button fx:id="catalogButton" text="Back to Catalog" styleClass="nav-button" onAction="#goCatalog"/>
                    </children>
                </HBox>
            </children>
        </StackPane>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <!-- Placeholder content for the contact section -->
            <Label text="Contact Support" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="For assistance, please email us at support@lilachstore.com" />
        </VBox>
    </center>

</BorderPane>
