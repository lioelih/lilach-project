<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ProductViewController"
            fitToWidth="true" fitToHeight="true"
            style="-fx-background-color: linear-gradient(to bottom, #f7f9fb, #eef3f7);">
    <content>
        <VBox alignment="TOP_CENTER" spacing="24" prefWidth="900" fillWidth="false">
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>

            <!-- Card -->
            <VBox spacing="20" maxWidth="900"
                  style="-fx-background-color: white; -fx-background-radius: 14; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 18, 0, 0, 6);">

                <!-- Header: Product image + essential fields -->
                <GridPane hgap="24" vgap="14">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="40"/>
                        <ColumnConstraints percentWidth="60"/>
                    </columnConstraints>

                    <!-- Image block -->
                    <StackPane GridPane.rowIndex="0" GridPane.columnIndex="0">
                        <VBox alignment="CENTER" spacing="10" prefWidth="340">
                            <ImageView fx:id="imageView" fitWidth="340" fitHeight="240" preserveRatio="true"
                                       style="-fx-background-color: #f1f5f9; -fx-background-radius: 10; -fx-padding: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 10;"/>
                            <!-- (Optional) put an 'Upload' button here later if you add image editing -->
                        </VBox>
                    </StackPane>

                    <!-- Name & Type -->
                    <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" spacing="12">
                        <Label text="Product Name" style="-fx-font-size: 12px; -fx-text-fill: #64748b;"/>
                        <TextField fx:id="nameField" promptText="Enter product name"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10;"/>

                        <Label text="Type" style="-fx-font-size: 12px; -fx-text-fill: #64748b; -fx-padding: 6 0 0 0;"/>
                        <TextField fx:id="typeField" promptText="Enter type/category"
                                   style="-fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 10;"/>
                    </VBox>
                </GridPane>

                <Separator/>

                <!-- Stock section -->
                <GridPane hgap="16" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                        <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                    </columnConstraints>

                    <Label text="Quantity in Branch:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                           style="-fx-text-fill: #334155;"/>
                    <HBox spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="1">
                        <TextField fx:id="qtyField" prefWidth="120" promptText="Qty"
                                   style="-fx-background-radius: 8; -fx-padding: 8;"/>
                        <ComboBox fx:id="branchBox" prefWidth="220"
                                  style="-fx-background-radius: 8; -fx-padding: 6;"/>
                    </HBox>
                    <Button fx:id="saveStockBtn" text="Save Qty" GridPane.rowIndex="0" GridPane.columnIndex="2"
                            style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 14;"/>

                </GridPane>

                <!-- Price section -->
                <GridPane hgap="16" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Price:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: #334155;"/>
                    <TextField fx:id="priceField" prefWidth="160" promptText="â‚ª0.00"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"
                               style="-fx-background-radius: 8; -fx-padding: 8; -fx-font-weight: bold;"/>
                </GridPane>

                <Separator/>

                <!-- Actions -->
                <HBox alignment="CENTER_RIGHT" spacing="12">
                    <Button fx:id="deleteButton" text="Delete Product"
                            style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 16;"/>
                    <Button fx:id="updateButton" text="Update Product"
                            style="-fx-background-color: #16a34a; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 16;"/>
                </HBox>
            </VBox>
        </VBox>
    </content>
</ScrollPane>
