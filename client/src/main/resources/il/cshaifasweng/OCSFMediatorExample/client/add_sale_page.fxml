<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.AddSaleController"
            prefWidth="1280.0" prefHeight="720.0"
            stylesheets="@editStyle.css">

    <!-- Simple Top Bar (white background, same family as View/Edit) -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="topbar">
            <padding>
                <Insets left="80" right="20"/>
            </padding>
            <Label text="Add Sale" styleClass="header-title"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- Center: Scrollable gradient background with a single white 'card' -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="edit-root">
            <content>
                <VBox alignment="TOP_CENTER" spacing="24" prefWidth="900">
                    <padding>
                        <Insets top="24" right="24" bottom="24" left="24"/>
                    </padding>

                    <!-- Card -->
                    <VBox spacing="18" maxWidth="900" styleClass="card">

                        <!-- Internal root container (preserve fx:id="root") -->
                        <VBox fx:id="root" alignment="TOP_CENTER" spacing="16">

                            <!-- Title inside card -->
                            <Label text="Create a New Sale" styleClass="header-title"/>

                            <!-- Name -->
                            <VBox spacing="6" maxWidth="640">
                                <Label text="Name" styleClass="muted-label"/>
                                <TextField fx:id="nameField" promptText="Sale name" styleClass="input-text"/>
                            </VBox>

                            <!-- Description -->
                            <VBox spacing="6" maxWidth="640">
                                <Label text="Description" styleClass="muted-label"/>
                                <TextField fx:id="descriptionField" promptText="Short description" styleClass="input-text"/>
                            </VBox>

                            <!-- Type -->
                            <VBox spacing="6" maxWidth="640">
                                <Label text="Discount Type" styleClass="muted-label"/>
                                <ComboBox fx:id="discountTypeBox" promptText="Select Discount Type" prefWidth="200.0" styleClass="input-text"/>
                            </VBox>

                            <!-- Dates -->
                            <GridPane hgap="16" vgap="12" maxWidth="640">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="50"/>
                                    <ColumnConstraints percentWidth="50"/>
                                </columnConstraints>

                                <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="0">
                                    <Label text="Start Date" styleClass="muted-label"/>
                                    <DatePicker fx:id="startDatePicker" styleClass="input-date"/>
                                </VBox>

                                <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="1">
                                    <Label text="End Date" styleClass="muted-label"/>
                                    <DatePicker fx:id="endDatePicker" styleClass="input-date"/>
                                </VBox>
                            </GridPane>

                            <!-- Dynamic section -->
                            <VBox spacing="10" maxWidth="640" styleClass="section-card">
                                <Label text="Sale Parameters" styleClass="muted-label"/>
                                <VBox fx:id="dynamicContainer" spacing="10" alignment="TOP_CENTER"/>
                            </VBox>

                            <!-- Actions -->
                            <HBox spacing="12" alignment="CENTER_RIGHT" maxWidth="640">
                                <!-- Keep fx:id for controller; add CSS ids for styling -->
                                <Button fx:id="cancelButton" id="cancelBtn" text="Cancel"/>
                                <Button fx:id="addButton"    id="addBtn"    text="Add Sale"/>
                            </HBox>

                        </VBox>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
