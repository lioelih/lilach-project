<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@homepage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.HomeController">

    <!-- ─────────── TOP BAR ─────────── -->
    <top>
        <StackPane prefHeight="70" styleClass="top-bar">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15" styleClass="top-bar">
                    <padding>
                        <Insets left="80" right="20" />
                    </padding>
                    <children>
                        <ImageView fx:id="logoImage" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true" />

                        <Button fx:id="catalogButton" styleClass="nav-button" text="Catalog" />
                        <Button fx:id="contactButton" styleClass="nav-button" text="Contact Support" />
                        <Button fx:id="vipButton" styleClass="nav-button" text="VIP Subscription" />
                        <Button fx:id="ordersButton" styleClass="nav-button" text="Orders" visible="false" />
                        <Button fx:id="usersButton" styleClass="nav-button" text="Users" visible="false" />

                        <Pane prefHeight="100.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                        <Button fx:id="registerButton" styleClass="nav-button" text="Register" />
                        <Button fx:id="loginButton" styleClass="nav-button" text="Login" />
                        <Button fx:id="logoutButton" styleClass="nav-button" text="Logout" visible="false" />

                    </children>
                </HBox>
            </children>
        </StackPane>
    </top>


    <!-- ─────────── HERO / CENTRE ─────────── -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <children>
                <ImageView fx:id="storeImage" fitHeight="250" fitWidth="800" preserveRatio="true" />
                <Label styleClass="hero-heading" text="Welcome to Lilach Store" />
                <Label styleClass="hero-subheading" text="All your needs for flowers" />
                <Label fx:id="welcomeLabel" styleClass="welcome-text" />
            </children>
        </VBox>
    </center>


    <!-- ─────────── BOTTOM HIGHLIGHTS ─────────── -->
    <bottom>
        <!-- Outer holder stretches full width but centres its inner bar.
             Extra bottom padding (taskbarOffset) keeps it off-screen bars -->
        <HBox alignment="CENTER">
            <!--          top   right bottom left  -->
            <padding><Insets bottom="50" left="10" right="10" top="10" /></padding>

            <HBox alignment="CENTER" maxWidth="-1" prefWidth="800" spacing="40">
                <children>
                    <VBox alignment="CENTER">
                        <Label styleClass="icon" text="✔" />
                        <Label styleClass="highlight" text="30,000+ Happy Customers" />
                    </VBox>
                    <VBox alignment="CENTER">
                        <Label styleClass="icon" text="🌿" />
                        <Label styleClass="highlight" text="Organic Flowers" />
                    </VBox>
                    <VBox alignment="CENTER">
                        <Label styleClass="icon" text="⭐" />
                        <Label styleClass="highlight" text="2,600+ 5 Star Reviews" />
                    </VBox>
                </children>
            </HBox>
        </HBox>
    </bottom>


</BorderPane>
