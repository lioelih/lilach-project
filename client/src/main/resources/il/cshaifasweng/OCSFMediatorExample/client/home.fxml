<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane prefHeight="720.0" prefWidth="1100.0"
            stylesheets="@homepage.css"
            xmlns="http://javafx.com/javafx/21.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.HomeController">

    <!-- ─────────── TOP BAR (unchanged) ─────────── -->
    <top>
        <StackPane prefHeight="70" styleClass="top-bar">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15" styleClass="top-bar">
                    <padding><Insets left="80" right="20"/></padding>
                    <children>
                        <ImageView fx:id="logoImage" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true"/>

                        <Button fx:id="catalogButton" styleClass="nav-button" text="Catalog"/>
                        <Button fx:id="contactButton" styleClass="nav-button" text="Contact Support"/>
                        <Button fx:id="vipButton" styleClass="nav-button" text="VIP Subscription"/>
                        <Button fx:id="ordersButton" styleClass="nav-button" text="Orders" visible="false"/>
                        <Button fx:id="usersButton" styleClass="nav-button" text="Users" visible="false"/>

                        <Pane prefHeight="100.0" prefWidth="0.0" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="registerButton" styleClass="nav-button" text="Register"/>
                        <Button fx:id="loginButton" styleClass="nav-button" text="Login"/>
                        <Label fx:id="welcomeLabel" styleClass="welcome-text" visible="false"/>
                        <Button fx:id="logoutButton" styleClass="nav-button" text="Logout" visible="false"/>
                    </children>
                </HBox>
            </children>
        </StackPane>
    </top>

    <!-- ─────────── CONTENT ─────────── -->
    <center>
        <VBox spacing="28" alignment="TOP_CENTER">

            <!-- HERO with animated GIF support -->
            <StackPane styleClass="hero-section" prefHeight="380">
                <children>
                    <!-- Drop any GIF/PNG/JPG here; GIF will animate automatically -->
                    <ImageView fx:id="storeImage" fitHeight="380" fitWidth="1100"
                               preserveRatio="false" pickOnBounds="true"/>

                    <!-- Overlay to keep text readable on bright images -->
                    <Rectangle managed="false" mouseTransparent="true" width="Infinity" height="Infinity" styleClass="hero-overlay"/>

                    <!-- Hero text + optional CTAs (no handlers required) -->
                    <VBox alignment="CENTER" spacing="2">
                        <Label styleClass="hero-heading" text="Welcome to Lilach Store"/>
                        <Label styleClass="hero-subheading" text="All your needs for flowers"/>
                        <HBox spacing="10" alignment="CENTER">
                            <Button fx:id="catalogButton2Button" text="Explore Catalog" styleClass="cta-primary"/>
                            <Button fx:id="vip2Button" text="Become VIP" styleClass="cta-secondary"/>
                        </HBox>
                    </VBox>
                </children>
                <padding><Insets top="10" right="24" bottom="10" left="24"/></padding>
            </StackPane>

            <!-- Feature cards -->
            <HBox spacing="18" alignment="CENTER">
                <padding><Insets left="24" right="24"/></padding>

                <StackPane styleClass="feature-card" prefWidth="320" prefHeight="140">
                    <VBox alignment="CENTER" spacing="6">
                        <Label styleClass="icon" text="💐"/>
                        <Label styleClass="feature-title" text="Curated Bouquets"/>
                        <Label styleClass="feature-sub" text="Hand-picked, seasonal designs"/>
                    </VBox>
                </StackPane>

                <StackPane styleClass="feature-card" prefWidth="320" prefHeight="140">
                    <VBox alignment="CENTER" spacing="6">
                        <Label styleClass="icon" text="⚡"/>
                        <Label styleClass="feature-title" text="Same-Day Delivery"/>
                        <Label styleClass="feature-sub" text="Order by 17:00, we’ll rush it"/>
                    </VBox>
                </StackPane>

                <StackPane styleClass="feature-card" prefWidth="320" prefHeight="140">
                    <VBox alignment="CENTER" spacing="6">
                        <Label styleClass="icon" text="🎁"/>
                        <Label styleClass="feature-title" text="Gifts &amp; Add-ons"/>
                        <Label styleClass="feature-sub" text="Cards, chocolates &amp; more"/>
                    </VBox>
                </StackPane>
            </HBox>

            <!-- Stats strip -->
            <HBox alignment="CENTER" spacing="48" styleClass="stats-strip">
                <padding><Insets top="12" bottom="20"/></padding>
                <VBox alignment="CENTER">
                    <Label styleClass="stat-number" text="30,000+"/>
                    <Label styleClass="stat-label" text="Happy Customers"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Label styleClass="stat-number" text="🌿"/>
                    <Label styleClass="stat-label" text="100% Organic"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Label styleClass="stat-number" text="2,600+"/>
                    <Label styleClass="stat-label" text="5-Star Reviews"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- Optional footer -->
    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <padding><Insets top="14" bottom="14"/></padding>
            <children>
                <Label text="© Lilach Store"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
